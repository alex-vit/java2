        <filter>
            <filter-name>MVCFilter</filter-name>
            <filter-class>lv.javaguru.java2.servlet.Router</filter-class>
        </filter>
        <filter-mapping>
            <filter-name>MVCFilter</filter-name>
            <url-pattern>/*</url-pattern>
        </filter-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>JSP templates</web-resource-name>
            <url-pattern>*.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>

</web-app>